<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/listItemFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="60sp"
            android:layout_height="20sp"
            android:layout_weight="0.01"
            android:gravity="left"
            android:text="Aff No"
            android:textColor="#000000" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/affnoTxt"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_weight="0.80"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemSecondRow"
        android:longClickable="false"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.12">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:gravity="left"
            android:text="Hospital   "
            android:textColor="#000000"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold" />

        <TextView
            android:layout_width="279dp"
            android:layout_height="20sp"
            android:id="@+id/hospitalnameTxt"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/purposeView"
            android:layout_width="60sp"
            android:layout_height="20sp"
            android:layout_weight="0.01"
            android:gravity="left"
            android:text="Purpose"
            android:textColor="#000000" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/purposeTxt"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_weight=".9"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/scheduletypeText"
            android:layout_width="60sp"
            android:layout_height="20sp"
            android:layout_weight="0.01"
            android:gravity="left"
            android:text="Type"
            android:textColor="#000000" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/scheduletypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_weight=".9"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="60sp"
            android:layout_height="20sp"
            android:text="Status"
            android:id="@+id/statusView"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_weight="0.01" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusTxt"
            android:layout_weight=".9"
            android:textColor="#000000"
            android:minHeight="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="60sp"
            android:layout_height="20sp"
            android:text="MySchID"
            android:id="@+id/myScheduleIDView"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_weight="0.01" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:text=":"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myScheduleIDTxt"
            android:layout_weight=".9"
            android:textColor="#000000"
            android:minHeight="20sp" />
    </LinearLayout>

</LinearLayout>

